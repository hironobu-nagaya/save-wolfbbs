#!/bin/bash
# Begin bin/minify-css

set -e

readonly ECHO="${ECHO:=echo}"
readonly SED="${SED:=sed}"

if [ "$#" -ne 1 ]
then
  "$ECHO" "${0##*/}: USAGE: ${0##*/} CSS"
  exit 1
fi >&2

{
  rm "$1"
  cat |
  "$SED" -n '{
    s/^[ \t]*//
    s/[ \t]*$//
    s/:[ \t]*/:/g
    s/[ \t]*{/{/g
    s%[ \t]*/\*.*\*/[ \t]*%%g
    /^$/!p
  }' | "$SED" -n '{
    1 {
      /@charset/b print
    }
    :minify
    N
    s/\n//
    $!b minify
    :print
    /^$/!p
  }' > "$1"
} < "$1"

# End bin/minify-css
